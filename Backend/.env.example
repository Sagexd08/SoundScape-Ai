# SoundScape-AI Backend Environment Variables

# Server
PORT=8000
NODE_ENV=development
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_API_KEY=your_supabase_service_role_key
SUPABASE_JWT_SECRET=your_supabase_jwt_secret

# Authentication
JWT_SECRET=your_jwt_secret_for_custom_tokens
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
OAUTH_REDIRECT_URL=http://localhost:3000/auth/callback
PASSWORD_RESET_REDIRECT_URL=http://localhost:3000/reset-password

# Email Configuration
EMAIL_FROM=noreply@example.com
SENDGRID_API_KEY=your_sendgrid_api_key

# Storage Configuration
STORAGE_BUCKET=your_storage_bucket
MAX_FILE_SIZE=100000000

# Redis Configuration
REDIS_URL=redis://localhost:6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=soundscape-ai

# Services URLs
AUTH_SERVICE_URL=http://auth-service:4000
USER_SERVICE_URL=http://user-service:4001
AUDIO_PROCESSOR_URL=http://audio-processor:8000
STORAGE_SERVICE_URL=http://storage-service:5001
RECOMMENDATION_ENGINE_URL=http://recommendation-engine:5000
ANALYTICS_SERVICE_URL=http://analytics-service:4005
NOTIFICATION_SERVICE_URL=http://notification-service:4006

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Push Notifications
FIREBASE_ADMIN_SDK_KEY=your_firebase_admin_sdk_key
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key